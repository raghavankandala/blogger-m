<b> New Blog Creation Form</b>

<div style="border:2px solid red;">
<% if @blog.errors.present? %>
	<span style="color:red;">Errors in the form</span> <br/>
<% end %>
<% @blog.errors.full_messages.each do |message| %>
	<%= message %> <br/>
<% end %>
</div>

<%= form_for @blog do |f| %>
	<%= f.label :title %> <br/>
	<%= f.text_field :title %> 
	<br/><br/>
	<%= f.label :description %><br/>
	<%= f.text_area :description %>
	<br/><br/>
	<%= f.label :author %><br/>
	<%= f.text_field :author %>
	<br/><br/>
	<%= f.label :keywords %><br/>
	<%= f.text_field :keywords %>
	<br/><br/>
	<%= f.submit %>
<% end %>

